				.considerations__align
					.considerations__header
						hgroup
							h5 CONSIDERACIONES
							h3 Nos gusta hablar Claro
						.link(@click="openConsiderations()")
							zoom-center-transition(group :duration="{enter: 400, leave: 300}")
								.link__more(v-if="!considerations.show" key=0)
									span Saber más
								.link__close(v-if="considerations.show" key=1)
